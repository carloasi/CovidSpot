<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroUsuarioActivity">
    <RelativeLayout
    android:id="@+id/topo"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Covid"
        android:textColor="#27275a"
        android:textSize="36dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="Spot"
        android:textColor="#27275a"
        android:textSize="36dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_virus_coronavirus_covid_covid_icon_134844"/>









</RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_line1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topo"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Cadastro de usuario"
            android:textColor="#27275a"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_nome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:textAllCaps="true"
            android:textColor="@color/txt"
            android:background="@drawable/txt_bg"
            android:inputType="textPersonName"
            android:hint="nome" />

        <EditText
            android:id="@+id/edit_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/txt_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAllCaps="true"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="usuario"
            android:textColor="@color/txt"

            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_senha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/txt_bg"
            android:ems="10"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAllCaps="true"
            android:hint="senha"
            android:inputType="textPassword"
            android:textColor="@color/txt"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_2"
            android:onClick="salvar"
            android:text="Cadastrar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_acessar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_2"
            android:onClick="acessar"
            android:text="Acessar"
            android:textColor="@color/white"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:gravity="center"
                android:onClick="voltar"
                android:text="voltar para tela logon"
                android:textColor="@color/gradStart" />

        </RelativeLayout>




    </LinearLayout>




</RelativeLayout>
